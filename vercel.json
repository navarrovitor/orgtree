{
  "version": 2,
  "builds": [
    {
      "src": "api/config.ru",
      "use": "@vercel/ruby",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
 "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/config.ru"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}